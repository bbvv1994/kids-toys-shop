{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://kids-toys-backend.onrender.com/api/$1"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "https://kids-toys-backend.onrender.com/uploads/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_BASE_URL": "https://kids-toys-backend.onrender.com"
  }
} 